# Telegram API credentials
# Get these from https://my.telegram.org
TG_API_ID=YOUR_API_ID_HERE
TG_API_HASH=YOUR_API_HASH_HERE

# =============================================================================
# Model Provider Configuration
# =============================================================================

# OpenRouter API Configuration (gateway to multiple models)
# Get API key from https://openrouter.ai
OPENROUTER_API_KEY=YOUR_API_KEY_HERE
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# Google AI API (for direct Gemini access)
# Get API key from https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# Anthropic API (for direct Claude access)
# Get API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# =============================================================================
# Two-Tier Model Selection
# =============================================================================

# Tier 1: Fast/cheap model for parallel chunk extraction
# Options: google/gemini-2.0-flash-001, openai/gpt-4o-mini, qwen/qwen-2.5-72b-instruct
TIER1_MODEL=google/gemini-2.0-flash-001

# Tier 2: Quality model for final synthesis (needs large context for many chunks)
# Options: google/gemini-3-flash-preview (1M ctx), anthropic/claude-sonnet-4, deepseek/deepseek-chat-v3-0324
TIER2_MODEL=google/gemini-3-flash-preview

# =============================================================================
# Request Parameters
# =============================================================================

OPENROUTER_TEMPERATURE=0.3
OPENROUTER_MAX_TOKENS=none
OPENROUTER_MAX_RETRIES=3
OPENROUTER_RETRY_DELAY=5

# Legacy single-model config (deprecated, use TIER1_MODEL/TIER2_MODEL instead)
OPENROUTER_MODEL=qwen/qwen3-235b-a22b-2507
